{
  "globals": {
    "process": true
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint-config-egg",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "jest"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "valid-jsdoc": "off",
    "prefer-promise-reject-errors": "off"
  }
}
